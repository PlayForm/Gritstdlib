language sol

pattern Loop($body) = bubble($body) orelse {
  `while($_) { $body }`
  `for ($_; $_; $_) { $body }`
}

pattern EtherTransfer($amount) = bubble($amount) or {
    `$sender.call{value: $amount}($_)`
    `$sender.call.value($amount)($_)`
    `$call($amount)` where {
        $call <: `$address.$functionName`
        $functionName <: r".*transfer.*"
    }
}
