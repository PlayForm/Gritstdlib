pattern EtherTransfer($amount) = bubble or {
    `$sender.call{value: $amount}($_)`
    `$sender.call.value($amount)($_)`
    `$call($amount)` where {
        $call <: MemberAccess(_, $address, _, _, _, _, _, $functionName, _, _, null)
        $functionName <: r".*transfer.*"
    }
}

pattern Loop($body) = orelse {
  Statement`while($_) { $body; }`
  Statement`do { $body; } while ($_)`
  Statement`for ($_; $_; $_) { $body; }`
}
